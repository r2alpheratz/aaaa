<?xml version="1.0" encoding="euc-kr"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration
    xmlns:log4j="http://jakarta.apache.org/log4j/"
    debug="false">

    <root>
        <level value="debug"/>
        <appender-ref ref="console"/>
    </root>
    
    <logger name="org.springframework"  additivity="false">
        <level value="error" />
        <appender-ref ref="console" />
        <!-- <appender-ref ref="FileAppender" /> -->
    </logger>

    <logger name="org.springmodules"  additivity="false">
        <level value="error" />
        <appender-ref ref="console" />
    </logger>

    <logger name="cosmos.spring"  additivity="false">
        <level value="error" />
        <appender-ref ref="console" />  
    </logger>

    <logger name="cosmos"  additivity="false">
        <level value="error" />
        <appender-ref ref="console" />
    </logger>
    
    <logger name="cosmos.log.jdbc"  additivity="false">
        <level value="error" />
        <appender-ref ref="console" />
    </logger>

    <logger name="com.korail"  additivity="false">
        <level value="debug" />
        <appender-ref ref="console" />      
    </logger>    
    
      
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%-5p][%d{MM/dd HH:mm:ss,SSS}][%C{5}.%M ()][%L line] %m%n" />
        </layout>
    </appender>
