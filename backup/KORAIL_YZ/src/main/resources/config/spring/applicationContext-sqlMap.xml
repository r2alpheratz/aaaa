	<bean id="sqlMapClient" class="cosmos.comm.ibatis.CosmosMultiDataSourceSqlMapClientFactoryBean">
		<property name="configLocation" value="classpath:/config/sqlmap/sql-map-config.xml"/>
		<!-- <property name="mappingLocations" value="classpath:/sqlmap/**/*.xml" /> -->
		<property name="dataSource" ref="dataSource"/>
	</bean>

	<bean id="sqlMapClientTemplate" class="org.springframework.orm.ibatis.SqlMapClientTemplate">
        <property name="sqlMapClient">
            <ref bean="sqlMapClient"/>
        </property>
    </bean>
    
